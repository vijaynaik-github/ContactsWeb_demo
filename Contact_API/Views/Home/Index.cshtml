    <div></div>
    <table id="tblCustomers" class="table" cellpadding="0" cellspacing="0">
        <tr>
            <th style="width: 70px">Contact Id</th>
            <th style="width: 130px">First Name</th>
            <th style="width: 130px">Last Name</th>
